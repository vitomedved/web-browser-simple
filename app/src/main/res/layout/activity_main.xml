<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_weight="1"
        android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="0.1" android:id="@+id/toolbarLayout" android:layout_height="0dp">
        <EditText
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/urlEditText" android:layout_weight="1" android:hint="@string/urlHint"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_search_category_default"
                android:id="@+id/searchButton" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@android:drawable/btn_star_big_on"
                android:id="@+id/favouriteButton" android:layout_weight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@android:drawable/ic_media_play"
                android:id="@+id/favouriteSearchButton" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="0.9" android:id="@+id/webLayout" android:layout_height="0dp">
        <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/webView"/>
    </LinearLayout>
</LinearLayout>